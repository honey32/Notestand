{
  "name": "notestand_desktop",
  "version": "0.0.0",
  "description": "",
  "main": "dist/index.html",
  "bin": "./public/carlo/main.js",
  "scripts": {
    "dev": "run-p serve watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "predeploy": "npm run build:nocache",
    "deploy": "firebase deploy",
    "serve": "firebase serve",
    "prewatch": "run-s clean copyfiles",
    "watch": "parcel watch index.html --no-hmr -d public/app --public-url /app",
    "prebuild": "run-s clean copyfiles",
    "build": "parcel build index.html -d public/app --public-url /app",
    "prebuild:nocache": "run-s clean copyfiles",
    "build:nocache": "parcel build index.html -d public/app --public-url /app --no-cache",
    "prerun:desktop": "run-s build:dev:desktop ts:carlo-main",
    "run:desktop": "node ./public/carlo/main.js",
    "prebuild:dev:desktop": "run-s clean copyfiles",
    "build:dev:desktop": "cross-env NODE_ENV=desktop npm run build",
    "prebuild:desktop": "run-s clean copyfiles",
    "build:desktop": "cross-env NODE_ENV=desktop npm run build:nocache",
    "postbuild:desktop": "run-s ts:carlo-main package:desktop",
    "ts:carlo-main": "tsc --project tsconfig-carlo.json",
    "package:desktop": "pkg . --out-dir ./build",
    "clean": "rimraf ./public/app",
    "copyfiles": "run-s copyworker copycmaps",
    "copyworker": "cpx node_modules/pdfjs-dist/build/pdf.worker.min.js public/app/",
    "copycmaps": "cpx node_modules/pdfjs-dist/cmaps/*.* public/app/cmaps",
    "lint:fix": "eslint --fix ./scripts/** ./tags/**"
  },
  "pkg": {
    "assets": "./public/**/*"
  },
  "author": "Mitsu Takeuchi",
  "license": "UNLICENSED",
  "browserslist": [
    "> 5%"
  ],
  "dependencies": {
    "appdata-path": "^1.0.0",
    "babel-polyfill": "^6.26.0",
    "carlo": "^0.9.46",
    "dexie": "^2.0.4",
    "micro": "^9.3.4",
    "microrouter": "^3.1.3",
    "page": "^1.11.6",
    "pdfjs-dist": "^2.4.456",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-pdf": "^5.0.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "recoil": "0.0.10",
    "serve-handler": "^5.0.8"
  },
  "devDependencies": {
    "@types/gapi.auth2": "0.0.46",
    "@types/gapi.client.drive": "^3.0.8",
    "@types/node": "^8.10.62",
    "@types/micro": "^7.3.3",
    "@types/microrouter": "^3.1.1",
    "@types/pdfjs-dist": "^2.1.5",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/react-pdf": "^4.0.5",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/recoil": "0.0.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.26.0",
    "babel-plugin-transform-es2015-template-literals": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-standard": "^4.0.1",
    "firebase-tools": "^6.12.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-sw-precache": "^1.1.2",
    "pkg": "^4.4.9",
    "prettier": "^2.0.5",
    "rimraf": "^2.7.1",
    "sass": "^1.26.10",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "watch": "^1.0.2",
    "webpack": "^3.12.0"
  }
}
